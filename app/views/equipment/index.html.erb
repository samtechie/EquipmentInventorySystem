<p id="notice"><%= notice %></p>

<h1>Equipment</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Model</th>
      <th>Serial number</th>
      <th>Lpo number</th>
      <th>Date supplied</th>
      <th>Supplier</th>
      <th>Status</th>
      <th>Kcca number</th>
      <th>Equipment name</th>
      <th>Equipment type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @equipment.each do |equipment| %>
      <tr>
        <td><%= equipment.description %></td>
        <td><%= equipment.model %></td>
        <td><%= equipment.serial_number %></td>
        <td><%= equipment.lpo_number %></td>
        <td><%= equipment.date_supplied %></td>
        <td><%= equipment.supplier %></td>
        <td><%= equipment.status %></td>
        <td><%= equipment.kcca_number %></td>
        <td><%= equipment.equipment_name %></td>
        <td><%= equipment.equipment_type %></td>
        <td><%= link_to 'Show', equipment %></td>
        <td><%= link_to 'Edit', edit_equipment_path(equipment) %></td>
        <td><%= link_to 'Destroy', equipment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

